<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Afiliado.FragmentHomeCanjeAfiliado">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="319dp"
            android:layout_height="34dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="646dp"
            android:text="Canje de Puntos Reciclaje"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtUser"
            android:layout_width="48dp"
            android:layout_height="19dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="316dp"
            android:layout_marginBottom="574dp"
            android:text="Usuario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

        <TextView
            android:id="@+id/txtServiceProduct"
            android:layout_width="116dp"
            android:layout_height="19dp"
            android:layout_marginTop="52dp"
            android:text="Servicio/ Producto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.162"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtUser" />

        <EditText
            android:id="@+id/edtUser"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_marginStart="59dp"
            android:layout_marginEnd="142dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUser" />

        <EditText
            android:id="@+id/edtServiceProduct"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="143dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="servicioproducto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtServiceProduct" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="150dp"
            android:layout_height="19dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="214dp"
            android:layout_marginBottom="1dp"
            android:text="Cantidad (kg)  Puntos"
            app:layout_constraintBottom_toTopOf="@+id/edtCant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtServiceProduct"
            app:layout_constraintVertical_bias="0.98" />

        <EditText
            android:id="@+id/edtCant"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="138dp"
            android:layout_marginBottom="61dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="cantidad"
            app:layout_constraintBottom_toTopOf="@+id/btnMakeChange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <Button
            android:id="@+id/btnMakeChange"
            android:layout_width="208dp"
            android:layout_height="55dp"
            android:layout_marginStart="101dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="202dp"
            android:backgroundTint="@color/blue_light"
            android:text="Realizar canje"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtCant" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>